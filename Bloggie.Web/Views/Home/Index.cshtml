@model Bloggie.Web.Models.ViewModels.HomeViewModel;
@{
    ViewData["Title"] = "Home Page";
}
<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                Bloggie - The Tech-Devlopement Blogging Website
            </h1>
            <p class="lead">
                Bloggie is the home for coders having a large content about the latest technologies  revolving around the world
                in the form of tech-blogs. If you want to get the reach content about tech stack subcribe to Bloggei.Web
            </p>
        </div>
        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/693859/pexels-photo-693859.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
                 alt="Bloggie-DevBlogs"
                 class="d-block mx-lg-auto img-fluid"
                 width:"300px" />
        </div>
    </div>
</div>
<div class="container mb-3">
    <div class="row justify-content-center">
        <div class="col-6 d-flex">
            @if(Model !=null && Model.Tags.Any())
            {
                foreach(var tag in Model.Tags)
                {
                    <span class="badge bg-dark me-1">
                        @tag.Name
                    </span>
                }
            }

        </div>
    </div>
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if (Model != null && Model.BlogPosts.Any())
            {
                foreach (var post in Model.BlogPosts)
                {
                    <div class="mb-5 bg-light box-shadow box-shadow p-5">
                        <img src="@post.FeaturedImageUrl" alt="@post.Heading"
                        class="mb-2 d-block img-fluid"/>
                        <h2 class="mb-2">
                            @post.Heading
                        </h2>
                        <p class="mt-4">
                        Author:@post.Author
                        <br/>
                        Published Date: @post.PublishDate.ToShortDateString();
                        </p>
                        <p class="mb-4">Description : @post.ShortDescription</p>
                        <p class="mb-4">
                            @foreach (var item in post.Tags)
                            {
                                <span class="badge bg-secondary ms-1">@item.Name</span>
                            }
                        </p>
                        <a class="btn btn-dark" asp-area="" asp-controller="Blogs" asp-action="Index"
                        asp-route-urlHandle="@post.UrlHandle"
                        > Read More...</a>
                    </div>
                }
            }
        </div>
    </div>
</div>