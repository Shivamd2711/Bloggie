@model List<Bloggie.Web.Models.Domain.BlogPost>;
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>All Blog Post - Admin Functionality</h1>
    </div>
</div>
<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Heading</th>
                    <th>Tags</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var blogPost in Model)
                {
                    <tr>
                        <td>@blogPost.Id</td>
                        <td>@blogPost.Heading</td>
                        <td>
                            <div class="d-flex">
                                @foreach (var item in blogPost.Tags)
                                {
                                    <span class="badge bg-secondary ms-1">@item.Name</span>
                                }
                            </div>
                        </td>
                        <td><a asp-area="" asp-controller="AdminTags" asp-action="Edit" asp-route-id="@blogPost.Id">Edit</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No blog posts found !</p>
    }
</div>